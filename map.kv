#:kivy 1.8.0
<Map>:
	Background:
		source: "d7d7d7.png"
	MapI:
		source: "mapwithout.png"
	BoxLayout:
		orientation: 'horizontal'
		Button:
			text: "Login"
			size: 80,60
			size_hint:0.2,None
			background_normal: 'ff242f.png'
			background_down: "eb1e25.png"
	
		Button:
			text: "Sign Up"
			size: 80,60
			size_hint:0.2,None
			background_normal: 'ff242f.png'
			background_down: "eb1e25.png"

<-Background>:
	canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width + 20, self.height + 20
            pos: self.x - 10, self.y - 10

<-MapI>:
	canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width + 0, self.height + 245
            pos: self.x - 10, self.y - 100