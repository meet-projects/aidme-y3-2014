#:kivy 1.8.0

<HomeScreen>:
	Background:
		source: 'e9e9e9.png'

	BoxLayout:
		orientation: 'vertical'
		AnchorLayout:
			anchor_x:'center'
			anchor_y:'center'
			Label:
				text:'AidMe'
		AnchorLayout:
			anchor_x:'center'
			anchor_y:'center'
			Button:
				id: 'HelpB'
				size_hint:0.2,None
				size:80,60
				text:'Help'
				background_normal: 'ff242f.png'
				background_down: 'ab1e25.png'
				
		BoxLayout:
			orientation: 'horizontal'
			Button:
				id: 'ProfileB'
				size:80,60
				size_hint:0.2,None
				text:'Profile'
				background_normal: 'ff242f.png'
				background_down: 'ab1e25.png'
				border: (30,30,30,30)
			Button:
				id: 'InstructionsB'
				size:80,60
				size_hint:0.2,None
				text:'instructions'
				background_normal: 'ff242f.png'
				background_down: 'ab1e25.png'
<-Background>:
	canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width + 20, self.height + 20
            pos: self.x + 0, self.y - 10
