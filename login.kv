#:kivy 1.8.0
<LogIn>:
	Backgruond:
		source: "d7d7d7.png"
	Logo:
		source: "Logo.png"
	Password:
		source: "password.png"
	Email:
		source: "email.png"	
	AnchorLayout:
		size_hint: 1,0.52
		anchor_x: "center"
		anchor_y: "top"
		TextInput:
			id: Email
			size: 500, 30
			size_hint: None, None
			pos: 50,50
	AnchorLayout:
		size_hint: 1,0.35
		anchor_x: "center"
		anchor_y: "top"
		TextInput:
			id: Password
			size: 500, 30
			size_hint: None, None
			pos: 50,50
	BoxLayout:
		orientation: 'horizontal'
		Button:
			text: "Login"
			size: 80,60
			size_hint:0.4,0
			background_normal: 'ff242f.png'
			background_down: "eb1e25.png"
	
		Button:
			text: "Sign Up"
			size: 80,60
			size_hint:0.4,0
			background_normal: 'ff242f.png'
			background_down: "eb1e25.png"
		

	


<-Backgruond>:
	canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width + 20, self.height + 20
            pos: self.x - 10, self.y - 10
<-SignUpB>:
	canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width -600, self.height -500
            pos: self.x + 150, self.y + 20

<-Logo>:
	canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width - 600, self.height - 500
            pos: self.x + 290, self.y + 450

<-Password>:
	canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width + 300, self.height + 300
            pos: self.x - 500, self.y + 0

<-Email>:
	canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width - 600, self.height - 505
            pos: self.x -19, self.y + 245
