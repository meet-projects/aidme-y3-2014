#:kivy 1.8.0
<SignUp>:
	Background:
		source: "d7d7d7.png"
	Name:
		source: "name.png"
	Password:
		source: "password.png"
	RPassword:
		source: "signup-retypepassword.png"
	PCode:
		source: "signup-promotioncode.png"
	Skills:
		source: "skills.png"
	

	BoxLayout:
		orientation: 'horizontal'
		Button:
			text: "submit"
			size: 80,60
			size_hint:0.2,None
			background_normal: 'ff242f.png'
			background_down: "eb1e25.png"
			on_press: app.submit()




<-Background>:
	canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width + 500, self.height + 630
            pos: self.x - 10, self.y - 285



