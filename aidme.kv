#:kivy 1.8.0

<HomeScreen>:
	Background:
		source: 'e9e9e9.png'

	BoxLayout:
		orientation: 'vertical'
		AnchorLayout:
			anchor_x:'center'
			anchor_y:'center'
			Label:
				text:'AidMe'
		AnchorLayout:
			anchor_x:'center'
			anchor_y:'center'
			Button:
				id: 'HelpB'
				size_hint: None,None
				size:168,168
				background_normal: 'helpbutton.png'
				background_down: 'helpbutton.png'
				on_press: app.submit_clicked("HelpB")

				
		BoxLayout:
			orientation: 'horizontal'
			AnchorLayout:
				anchor_y:'bottom'
				anchor_x:'left'
				Button:
					id: 'ProfileB'
					size:80,60
					size_hint:0.999,None
					text:'Profile'
					background_normal: 'ff242f.png'
					background_down: 'ab1e25.png'
					on_press: app.submit_clicked("ProfileB")
			AnchorLayout:
				anchor_y:'bottom'
				anchor_x:'right'
				Button:
					id: 'MapB'
					size:80,60
					size_hint:0.999,None
					text:'Map'
					background_normal: 'ff242f.png'
					background_down: 'ab1e25.png'
					on_press: app.submit_clicked("InstructionsB")

<-Background>:
	canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width + 20, self.height + 20
            pos: self.x + 0, self.y - 10


<LogInScreen>:
	Background:
		source: "d7d7d7.png"
	Logo:
		source: "Logo.png"
	Password:
		source: "password.png"
	Email:
		source: "email.png"	
	AnchorLayout:
		size_hint: 1,0.52
		anchor_x: "center"
		anchor_y: "top"
		TextInput:
			id: Email
			size: 500, 30
			size_hint: None, None
			pos: 50,50
	AnchorLayout:
		size_hint: 1,0.35
		anchor_x: "center"
		anchor_y: "top"
		TextInput:
			id: Password
			size: 500, 30
			size_hint: None, None
			pos: 50,50
	BoxLayout:
		orientation: 'horizontal'
		Button:
			text: "Login"
			size: 80,60
			size_hint:0.4,0
			background_normal: 'ff242f.png'
			background_down: "eb1e25.png"
			on_press: app.submit_clicked("LogInB")
	
		Button:
			text: "Sign Up"
			size: 80,60
			size_hint:0.4,0
			background_normal: 'ff242f.png'
			background_down: "eb1e25.png"
			on_press: app.submit_clicked("SignUpB")


<ProfileScreen>:
	Background:
		source: 'd7d7d7.png'
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			orientation: 'horizontal'
			AnchorLayout:
				anchor_x:'left'
				anchor_y:'top'
				Button:
					id: 'EditB'
					size_hint:0.2,None
					size:80,60
					text:'Edit'
					background_normal: 'ff242f.png'
					background_down: 'ab1e25.png'
			AnchorLayout:
				anchor_x:'right'
				anchor_y:'top'
				Button:
					id: 'LogOutB'
					size_hint:0.2,None
					size:80,60
					text:'Log Out'
					background_normal: 'ff242f.png'
					background_down: 'ab1e25.png'
		AnchorLayout:
			anchor_x:'center'
			anchor_y:'top'
			Label:
				text:'profile'
		BoxLayout:
			orientation: 'horizontal'
			AnchorLayout:
				anchor_y:'bottom'
				anchor_x:'left'
				Button:
					id: 'HomeB'
					size:80,60
					size_hint:0.999,None
					text:'Home'
					background_normal: 'ff242f.png'
					background_down: 'ab1e25.png'
					border: (30,30,30,30)
			AnchorLayout:
				anchor_y:'bottom'
				anchor_x:'right'
				Button:
					id: 'MapB'
					size:80,60
					size_hint:0.999,None
					text:'Map'
					background_normal: 'ff242f.png'
					background_down: 'ab1e25.png'


<-Background>:
	canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width + 20, self.height + 20
            pos: self.x - 10, self.y - 10
<-SignUpB>:
	canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width -600, self.height -500
            pos: self.x + 150, self.y + 20

<-Logo>:
	canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width - 600, self.height - 500
            pos: self.x + 290, self.y + 450

<-Password>:
	canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width + 300, self.height + 300
            pos: self.x - 500, self.y + 0

<-Email>:
	canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width - 600, self.height - 505
            pos: self.x -19, self.y + 245
