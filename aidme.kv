#:kivy 1.8.0

<HomeScreen>:
	Background:
		source: 'ffffff.png'

	BoxLayout:
		orientation: 'vertical'
		AnchorLayout:
			anchor_x:'center'
			anchor_y:'center'
			Label:
				text:''
		AnchorLayout:
			anchor_x:'center'
			anchor_y:'center'
			Button:
				id: 'HelpB'
				size_hint: None,None
				size:168,168
				background_normal: 'helpbutton.png'
				background_down: 'helpbuttonpressed.png'
				on_press: app.submit_clicked("HelpB")

		BoxLayout:
			orientation: 'horizontal'
			AnchorLayout:
				anchor_y:'bottom'
				anchor_x:'left'
				Button:
					id: 'ProfileB'
					size:80,60
					size_hint:0.99,0.3
					text:'Profile'
					background_normal: 'ff242f.png'
					background_down: 'ab1e25.png'
					on_press: app.submit_clicked("ProfileB")
			AnchorLayout:
				anchor_y:'bottom'
				anchor_x:'right'
				Button:
					id: 'MapB'
					size:80,60
					size_hint:0.99,0.3
					text:'Map'
					background_normal: 'ff242f.png'
					background_down: 'ab1e25.png'
					on_press: app.submit_clicked("MapB")



<LogInScreen>:
	Background:
		source: "ffffff.png"
	Logo:
		source: "Logo.png"
	Password:
		source: "password.png"
	Email:
		source: "email.png"	
	AnchorLayout:
		size_hint: 1,0.52
		anchor_x: "right"
		anchor_y: "top"
		padding: 100
		TextInput:
			id: Email
			size: 600, 70
			size_hint: None, None
			pos: 50,50
	AnchorLayout:
		size_hint: 1,0.35
		anchor_x: "right"
		anchor_y: "top"
		padding: 100
		TextInput:
			id: Password
			size: 600, 70
			size_hint: None, None
			pos: 1000,50
	BoxLayout:
		orientation: 'horizontal'
		AnchorLayout:
			anchor_y:'bottom'
			anchor_x:'left'
			Button:
				text: "Login"
				size: 80,60
				size_hint:0.99,0.1
				background_normal: 'ff242f.png'
				background_down: "eb1e25.png"
				on_press: app.submit_clicked("LogInB")
		AnchorLayout:
			anchor_y:'bottom'
			anchor_x:'right'
			Button:
				text: "Sign Up"
				size: 80,60
				size_hint:0.99,0.1
				background_normal: 'ff242f.png'
				background_down: "eb1e25.png"
				on_press: app.submit_clicked("SignUpB")


<ProfileScreen>:
	Background:
		source: 'ffffff.png'
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			orientation: 'horizontal'
			AnchorLayout:
				anchor_x:'left'
				anchor_y:'top'
				Button:
					text: 'Sagi Zur'
					size: 80,60
					size_hint: 2,0.7
					background_normal:'737373.png'
					background_down:'737373.png'
				Button:
					id: 'EditB'
					size_hint:0.4,0.7
					size:80,60
					text:'Edit'
					background_normal: 'ff242f.png'
					background_down: 'ab1e25.png'
			AnchorLayout:
				anchor_x:'right'
				anchor_y:'top'
				Button:
					id: 'LogOutB'
					size_hint:0.4,0.7
					size:80,60
					text:'Log Out'
					background_normal: 'ff242f.png'
					background_down: 'ab1e25.png'
					on_press: app.submit_clicked("LogOutB")
		Label:
			text:'Profile'
			color:(0,0,0,1)
		BoxLayout:
			orientation: 'horizontal'
			Label:
				text: 'Name: '
				color: (1,0,0,1)
			Label:
				text: 'Sagi Zur'
				color: (0,0,0,1)
		BoxLayout:
			orientation: 'horizontal'
			Label:
				text: 'Age: '
				color: (1,0,0,1)
			Label:
				text: '18'
				color: (0,0,0,1)
		BoxLayout:
			orientation: 'horizontal'
			Label:
				text: 'Diseases: '
				color: (1,0,0,1)
			Label:
				text: 'None'
				color: (0,0,0,1)
		BoxLayout:
			orientation: 'horizontal'
			Label:
				text: 'Skills: '
				color: (1,0,0,1)
			Label:
				text: '10 Hours First Aid Course'
				color: (0,0,0,1)
		BoxLayout:
			orientation: 'horizontal'
			AnchorLayout:
				anchor_y:'bottom'
				anchor_x:'left'
				Button:
					id: 'HomeB'
					size:80,60
					size_hint:0.99,0.7
					text:'Home'
					background_normal: 'ff242f.png'
					background_down: 'ab1e25.png'
					on_press: app.submit_clicked("HomeB")
			AnchorLayout:
				anchor_y:'bottom'
				anchor_x:'right'
				Button:
					id: 'MapB'
					size:80,60
					size_hint:0.99,0.7
					text:'Map'
					background_normal: 'ff242f.png'
					background_down: 'ab1e25.png'
					on_press: app.submit_clicked("MapB")

<-Background>:
	canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width + 20, self.height + 20
            pos: self.x - 10, self.y - 10
<-SignUpB>:
	canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width -600, self.height -500
            pos: self.x + 150, self.y + 20

<-Logo>:
